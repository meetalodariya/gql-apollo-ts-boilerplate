# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default styles
[*]
  indent_style = space
  indent_size = 2
  end_of_line = lf
  charset = utf-8
  trim_trailing_whitespace = true
  insert_final_newline = true

[{*.ts,*.sh,*.yml}]
  indent_style = space
  indent_size = 2

[*.md]
  indent_size = 4
  indent_style = space

[Dockerfile]
  indent_size = 2
  indent_style = space

[Makefile]
  indent_style = tab
